<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sweedish MeatBalls</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="header">
        
        <div class="navbar-collapse collapse">
            @*<div class="nav-link" id="brand-link">@Html.ActionLink("Super Sweed", "Index", "Home", new { area = "" })</div>*@
            <button type="button" id="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span id="ib1" class="icon-bar"></span>
                <span id="ib2" class="icon-bar"></span>
                <span id="ib3" class="icon-bar"></span>
            </button>
            <ul class="navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                <li>@Html.ActionLink("About", "About", "Home")</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
            </ul>
        </div>
    </div>
    <div id="body-content">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
